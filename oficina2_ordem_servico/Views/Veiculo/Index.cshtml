@model IEnumerable<oficina2_ordem_servico.Models.VeiculoModel>

@{
    ViewBag.Title = "Veículo";
}

<h3>Veículo</h3>

<p>
    @Html.ActionLink("Cadastrar novo", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.CpfCnpj)
